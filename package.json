{
  "name": "pixelport",
  "version": "0.3.0",
  "description": "macOS desktop app for deterministic high-resolution webpage screenshots",
  "author": "Mat Doidge",
  "main": "src/main/index.js",
  "type": "commonjs",
  "scripts": {
    "start": "electron .",
    "test": "node --test",
    "pack:mac": "electron-builder --mac dir",
    "dist:mac": "electron-builder --mac dmg",
    "release": "node ./scripts/release.js",
    "release:patch": "node ./scripts/release.js patch",
    "release:minor": "node ./scripts/release.js minor",
    "release:major": "node ./scripts/release.js major"
  },
  "dependencies": {
    "electron-updater": "^6.3.9",
    "playwright": "^1.52.0",
    "sharp": "^0.34.2"
  },
  "devDependencies": {
    "electron": "^34.2.0",
    "electron-builder": "^25.1.8"
  },
  "build": {
    "appId": "com.pixelport.app",
    "productName": "PixelPort",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "package.json",
      "README.md"
    ],
    "publish": [
      {
        "provider": "github",
        "owner": "matdoidge",
        "repo": "pixelport"
      }
    ],
    "mac": {
      "icon": "assets/icon/pixelport.icns",
      "target": [
        "dmg"
      ],
      "category": "public.app-category.graphics-design",
      "artifactName": "${productName}-${version}-${arch}.${ext}"
    }
  }
}
